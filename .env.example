# Environment Configuration Template
# Copy this file to .env.local and fill in the actual values

# Security Keys (Generate strong random keys for production)
KEY="your-strong-random-key-32-characters-minimum"
SECRET="your-strong-random-secret-32-characters-minimum"

# Admin Credentials
ADMIN_EMAIL="your-admin@example.com"
ADMIN_PASSWORD="your-secure-admin-password"

# Database Configuration
DB_CLIENT="pg"
DB_HOST="postgres"
DB_PORT="5432"
DB_DATABASE="directus_local"
DB_USER="directus"
DB_PASSWORD="your-database-password"

# Development Settings (adjust for production)
LOG_LEVEL="info"
CACHE_ENABLED="true"
RATE_LIMITER_ENABLED="true"

# External Database (for cloud deployments)
# DB_CONNECTION_STRING="postgresql://user:password@host:port/database"